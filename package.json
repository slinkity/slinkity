  "author": {
    "name": "Ben Holmes",
    "email": "hey@bholmes.dev",
    "url": "https://bholmes.dev/"
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "static-site-generator",
    "static-site",
    "ssg",
    "documentation",
    "website",
    "jekyll",
    "blog",
    "templates",
    "generator",
    "framework",
    "eleventy",
    "eleventy-plugin",
    "11ty",
    "html",
    "markdown",
    "liquid",
    "nunjucks",
    "pug",
    "handlebars",
    "mustache",
    "ejs",
    "haml",
    "react",
    "vite",
    "bundler"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/slinkity/slinkity.git"
  },
  "bugs": "https://github.com/slinkity/slinkity/issues",
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@changesets/cli": "^2.22.0",
    "@types/jest": "^27.4.1",
    "babel-jest": "^27.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "faker": "^5.5.3",
    "husky": "^4.3.0",
    "jest": "^27.0.6",
    "lint-staged": "^12.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "stylelint": "^14.2.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "build": "pnpm -r --filter slinkity run build",
    "dev": "pnpm -r --filter slinkity run dev",
    "lint": "run-p lint:css lint:js",
    "lint:fix": "run-p lint:*:fix",
    "lint:css": "stylelint \"{packages,www}/**/*.scss\"",
    "lint:css:fix": "stylelint --fix \"{packages,www}/**/*.scss\"",
    "lint:js": "eslint \"packages/**/*.{js,jsx,mjs}\"",
    "lint:js:fix": "eslint --fix \"packages/**/*.{js,jsx,mjs}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "www:build": "npm -C www run build",
    "www:dev": "npm -C www run dev"
  },
  "jest": {
    "roots": [
      "<rootDir>/packages/"
    ]
  },
  "volta": {
    "node": "14.18.1",
    "npm": "7.24.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "npm run lint:js:fix",
    "*.scss": "npm run lint:css:fix"
  }
}